---
interface Props {
  pkg: string
  repo: string
}
const { pkg, repo } = Astro.props
---

<div class="flex gap-2">
  <a href=`https://www.npmjs.com/package/${pkg}` target="_blank" rel="noopener noreferrer">
    <img src=`https://img.shields.io/npm/v/${pkg}?style=flat-square` alt="npm package" />
  </a>
  <a href=`https://github.com/${repo}/stargazers` target="_blank" rel="noopener noreferrer">
    <img src=`https://img.shields.io/github/stars/${repo}?style=flat-square` alt="github stars" />
  </a>
  <a href=`https://github.com/${repo}/blob/master/LICENSE` target="_blank" rel="noopener noreferrer">
    <img src=`https://img.shields.io/github/license/${repo}?style=flat-square` alt="license" />
  </a>
</div>
